Subject: [PATCH] Add numpad layout

Add a numberpad only layout for uses where text input is not required.
---
 data/layouts/Makefile.am      |   4 +-
 data/layouts/Makefile.in      |   4 +-
 data/layouts/numpad.xml.in.in | 146 ++++++++++++++++++++++++++++++++++++++++++
 3 files changed, 150 insertions(+), 4 deletions(-)
 create mode 100644 data/layouts/numpad.xml.in.in

diff --git a/data/layouts/Makefile.am b/data/layouts/Makefile.am
index 373f6ad..995d963 100644
--- a/data/layouts/Makefile.am
+++ b/data/layouts/Makefile.am
@@ -1,11 +1,11 @@
 
 layoutdir=$(datadir)/florence/layouts
-layout_in_files=florence.xml.in florence-alt.xml.in compact.xml.in compact-alt.xml.in mini.xml.in
+layout_in_files=florence.xml.in florence-alt.xml.in compact.xml.in compact-alt.xml.in mini.xml.in numpad.xml.in
 layout_DATA=$(layout_in_files:.xml.in=.xml)
 @INTLTOOL_XML_RULE@
 $(layout_in_files): $(layout_in_files:.xml.in=.xml.in.in)
 	sed -e "s|\@VERSION\@|$(VERSION)|" $(srcdir)/$@.in > $@
 
-EXTRA_DIST = florence.xml.in.in florence-alt.xml.in.in compact.xml.in.in compact-alt.xml.in.in mini.xml.in.in
+EXTRA_DIST = florence.xml.in.in florence-alt.xml.in.in compact.xml.in.in compact-alt.xml.in.in mini.xml.in.in numpad.xml.in.in
 DISTCLEANFILES = $(layout_DATA) $(layout_in_files)
 
diff --git a/data/layouts/Makefile.in b/data/layouts/Makefile.in
index b98a1e7..592abd9 100644
--- a/data/layouts/Makefile.in
+++ b/data/layouts/Makefile.in
@@ -217,9 +217,9 @@ top_build_prefix = @top_build_prefix@
 top_builddir = @top_builddir@
 top_srcdir = @top_srcdir@
 layoutdir = $(datadir)/florence/layouts
-layout_in_files = florence.xml.in florence-alt.xml.in compact.xml.in compact-alt.xml.in mini.xml.in
+layout_in_files = florence.xml.in florence-alt.xml.in compact.xml.in compact-alt.xml.in mini.xml.in numpad.xml.in
 layout_DATA = $(layout_in_files:.xml.in=.xml)
-EXTRA_DIST = florence.xml.in.in florence-alt.xml.in.in compact.xml.in.in compact-alt.xml.in.in mini.xml.in.in
+EXTRA_DIST = florence.xml.in.in florence-alt.xml.in.in compact.xml.in.in compact-alt.xml.in.in mini.xml.in.in numpad.xml.in.in
 DISTCLEANFILES = $(layout_DATA) $(layout_in_files)
 all: all-am
 
